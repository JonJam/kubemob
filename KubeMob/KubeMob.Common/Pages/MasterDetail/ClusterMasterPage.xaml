<?xml version="1.0" encoding="utf-8" ?>
<base:ExtendedContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:behaviors="clr-namespace:KubeMob.Common.Behaviors"
                          xmlns:extensions="clr-namespace:KubeMob.Common.MarkupExtensions;assembly=KubeMob.Common"
                          xmlns:base="clr-namespace:KubeMob.Common.Pages.Base;assembly=KubeMob.Common"
                          xmlns:common="clr-namespace:KubeMob.Common;assembly=KubeMob.Common"
                          xmlns:views="clr-namespace:KubeMob.Common.Views;assembly=KubeMob.Common"
                          x:Class="KubeMob.Common.Pages.MasterDetail.ClusterMasterPage"
             common:ViewModelLocator.AutoWireViewModel="False"
             Title="â˜°">

    <ScrollView>
        <StackLayout
            CompressedLayout.IsHeadless="true">

            <!--<Grid 
                BackgroundColor="#03A9F4"
                CompressedLayout.IsHeadless="true">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="10"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="10"/>
                </Grid.ColumnDefinitions>
                <Grid.RowDefinitions>
                    <RowDefinition Height="30"/>
                    <RowDefinition Height="80"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="10"/>
                </Grid.RowDefinitions>
                <Label
                    Grid.Column="1"
                    Grid.Row="2"
                    Text="{extensions:Translate AppName}"
                    Style="{DynamicResource SubtitleStyle}"/>
            </Grid>-->

            <!-- Remove stacklayouts ?? -->
            <StackLayout
                CompressedLayout.IsHeadless="true"
                Padding="15,10"
                HorizontalOptions="FillAndExpand">
                <Label 
                    Text="{extensions:Translate ClusterMasterPage_NamespaceLabel}"/>
                <Picker
                    x:Name="NamespacePicker"
                    ItemsSource="{Binding Namespaces}"
                    ItemDisplayBinding="{Binding Name}"
                    SelectedItem="{Binding SelectedNamespace, Mode=TwoWay}"
                    Margin="10,0,0,0">
                </Picker>
            </StackLayout>

            <!-- Workloads -->
            <views:GroupMenuItem
                Title="{extensions:Translate ClusterMasterViewModel_Workloads}"/>

            <views:TappableView
                Command="{Binding NavigateToCronJobsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_CronJobs}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToDaemonSetsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_DaemonSets}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToDeploymentsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_Deployments}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToJobsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_Jobs}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToPodsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_Pods}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToReplicaSetsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_ReplicaSets}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToReplicationControllersCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_ReplicationControllers}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToStatefulSetsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Workloads_StatefulSets}"/>
            </views:TappableView>

            <!-- Discovery and load balancing -->
            <views:GroupMenuItem
                Title="{extensions:Translate ClusterMasterViewModel_DiscoveryAndLoadBalancing}"/>

            <views:TappableView
                Command="{Binding NavigateToIngressesCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_DiscoveryAndLoadBalancing_Ingresses}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToServicesCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_DiscoveryAndLoadBalancing_Services}"/>
            </views:TappableView>

            <!-- Config and storage -->
            <views:GroupMenuItem
                Title="{extensions:Translate ClusterMasterViewModel_ConfigAndStorage}"/>

            <views:TappableView
                Command="{Binding NavigateToConfigMapsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_ConfigAndStorage_ConfigMaps}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToPersistentVolumeClaimsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_ConfigAndStorage_PersistentVolumeClaims}"/>
            </views:TappableView>

            <views:TappableView
                Command="{Binding NavigateToSecretsCommand}">
                <views:MenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_ConfigAndStorage_Secrets}"/>
            </views:TappableView>

            <!-- Other -->
            <views:TappableView
                Command="{Binding NavigateToSettingsCommand}">
                <views:GroupMenuItem
                    Title="{extensions:Translate ClusterMasterViewModel_Settings}"/>
            </views:TappableView>
        </StackLayout>
    </ScrollView>
</base:ExtendedContentPage>