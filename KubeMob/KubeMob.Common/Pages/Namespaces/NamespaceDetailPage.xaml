                    Detail="{Binding Detail.CreationTime}"/>

                <TextCell
                    Text="{markupExtensions:Translate DetailPage_Details_Status}"
                    Detail="{Binding Detail.Status}"/>

            </TableSection>
        </TableRoot>
    </TableView>

