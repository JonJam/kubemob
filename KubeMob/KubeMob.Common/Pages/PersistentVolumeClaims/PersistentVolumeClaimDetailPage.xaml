<?xml version="1.0" encoding="utf-8" ?>
<base:ExtendedContentPage xmlns="http://xamarin.com/schemas/2014/forms"
                          xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
                          xmlns:markupExtensions="clr-namespace:KubeMob.Common.MarkupExtensions;assembly=KubeMob.Common"
                          xmlns:base="clr-namespace:KubeMob.Common.Pages.Base;assembly=KubeMob.Common"
                          xmlns:views="clr-namespace:KubeMob.Common.Views"
                          xmlns:common="clr-namespace:KubeMob.Common;assembly=KubeMob.Common"
                          x:Class="KubeMob.Common.Pages.PersistentVolumeClaims.PersistentVolumeClaimDetailPage"
                          Title="{Binding Name}"
                          common:ViewModelLocator.AutoWireViewModel="true"
                          ControlTemplate="{StaticResource ObjectDetailTemplate}">

    <StackLayout>
        <Label
            Text="{markupExtensions:Translate DetailPage_Details}"
            FontSize="18"/>
        <ContentView
            ControlTemplate="{StaticResource ObjectDetailCommonPropertiesTemplate}"/>

        <Label
                        Text="{markupExtensions:Translate DetailPage_Details_Status}"
                        FontAttributes="Bold"/>
        <Label
                        Text="{Binding Detail.Status}"/>

        <Label
                        Text="{markupExtensions:Translate PersistentVolumeClaimDetailPage_Details_Volume}"
                        FontAttributes="Bold"/>
        <Label
                        Text="{Binding Detail.VolumeName}"/>

        <Label
                        Text="{markupExtensions:Translate PersistentVolumeClaimDetailPage_Details_AccessModes}"
                        FontAttributes="Bold"/>
        <views:ItemsControl
                        ItemsSource="{Binding Detail.AccessModes}"
                        PlaceholderText="-">
            <views:ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Label
                                    Text="{Binding .}"
                                    HorizontalOptions="Start"/>
                </DataTemplate>
            </views:ItemsControl.ItemTemplate>
        </views:ItemsControl>

        <Label
                        Text="{markupExtensions:Translate PersistentVolumeClaimDetailPage_Details_StorageClass}"
                        FontAttributes="Bold"/>
        <Label
                        Text="{Binding Detail.StorageClassName}"/>

        <Label
                        Text="{markupExtensions:Translate PersistentVolumeClaimDetailPage_Capacity}"             
                        FontSize="18"/>
        <Grid>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Label
                            Grid.Column="0"
                            Text="{markupExtensions:Translate PersistentVolumeClaimDetailPage_Capacity_ResourceName}"/>
            <Label
                            Grid.Column="1"
                            Text="{markupExtensions:Translate EmptyMessage}"/>
        </Grid>
        <views:ItemsControl
                        ItemsSource="{Binding Detail.Capacity}"
                        PlaceholderText="-">
            <views:ItemsControl.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition Width="*"/>
                            <ColumnDefinition Width="*"/>
                        </Grid.ColumnDefinitions>
                        <Label
                                        Grid.Column="0"
                                        Text="{Binding ResourceName}"/>
                        <Label
                                        Grid.Column="1"
                                        Text="{Binding Quantity}"/>
                    </Grid>
                </DataTemplate>
            </views:ItemsControl.ItemTemplate>
        </views:ItemsControl>
    </StackLayout>
</base:ExtendedContentPage>